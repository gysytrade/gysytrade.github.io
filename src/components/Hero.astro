---
interface Props {
  title: string;
  subtitle: string;
  image?: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title, 
  subtitle, 
  image = "https://images.unsplash.com/photo-1578575437130-527eed3abbec?auto=format&fit=crop&q=80&w=2070", // Container ship/trade image
  ctaText = "Learn More", 
  ctaLink = "/about" 
} = Astro.props;
---

<section class="relative h-[80vh] flex items-center overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src={image} 
      alt="International Trade" 
      class="w-full h-full object-cover transition-transform duration-10000 hover:scale-105"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-slate-900/90 via-slate-900/70 to-transparent"></div>
  </div>

  <div class="container relative z-10 text-white">
    <div class="max-w-2xl animate-fade-in-up">
      <h1 class="text-4xl md:text-6xl font-bold font-serif mb-6 leading-tight">
        {title}
      </h1>
      <p class="text-lg md:text-xl text-gray-200 mb-8 font-light">
        {subtitle}
      </p>
      <div class="flex gap-4">
        <a href={ctaLink} class="btn-accent text-lg px-8 py-4 rounded-md">
          {ctaText}
        </a>
        <a href="/contact" class="btn-primary border-white bg-transparent hover:bg-white hover:text-primary transition-all text-lg px-8 py-4 rounded-md">
          Contact Us
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fade-in-up 1s ease-out forwards;
  }
</style>
