---
interface Feature {
  title: string;
  description: string;
  icon?: string;
  image?: string;
}

interface Props {
  title: string;
  features: Feature[];
}

const { title, features } = Astro.props;

// Helper function to map feature titles to image names
const getImagePath = (title: string) => {
  // Mapping based on Chinese titles
  if (title.includes('纺织') || title.includes('Textile')) {
    return '/images/fangzhiyuzhenzhi.png';
  } else if (title.includes('服装') || title.includes('Apparel')) {
    return '/images/fuzhuangyupeishi.png';
  } else if (title.includes('农产品') || title.includes('Agriculture')) {
    return '/images/nongchanpin.png';
  } else if (title.includes('建筑') || title.includes('Construction')) {
    return '/images/jianzhucailiao.png';
  } else if (title.includes('家电') || title.includes('Appliances')) {
    return '/images/jiadianyuwujin.png';
  } else if (title.includes('文具') || title.includes('stationery')) {
    return '/images/wenjuyutiyuyongpin.png';
  }
  // Default fallback
  return '/images/nongchanpin.png';
};
---

<section class="section-padding bg-slate-50/80 backdrop-blur-sm relative overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-white to-indigo-50 opacity-70"></div>
  <div class="absolute inset-0">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 1440 320">
      <path fill="currentColor" fill-opacity="0.05" d="M0,96L48,112C96,128,192,160,240,160C288,160,384,128,432,128C480,128,576,160,624,160C672,160,768,128,816,128C864,128,960,160,1008,160C1056,160,1152,128,1200,128C1248,128,1344,160,1392,160C1440,160,1440,160,1440,160L1440,320L1392,320C1344,320,1248,320,1200,320C1152,320,1056,320,1008,320C960,320,864,320,816,320C768,320,672,320,624,320C576,320,480,320,432,320C384,320,288,320,240,320C192,320,96,320,48,320L0,320L0,96Z"></path>
    </svg>
  </div>

  <div class="container relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold font-serif text-primary mb-4">{title}</h2>
      <div class="w-24 h-1 bg-accent mx-auto"></div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {features.map((feature) => (
        <div class="group h-full flex flex-col bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 overflow-hidden hover:ring-2 hover:ring-accent/20 transform-gpu">
          <!-- Image Container -->
          <div class="relative h-48 overflow-hidden bg-gray-100">
            <img 
              src={getImagePath(feature.title)} 
              alt={feature.title}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              loading="lazy"
              onError="this.src='/images/nongchanpin.png'" // Fallback image if specific image fails
            />
            <!-- Overlay with pattern -->
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500"></div>
            <!-- Category Badge -->
            <div class="absolute top-3 right-3 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-semibold text-primary opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              {feature.title}
            </div>
          </div>
          
          <!-- Content Container -->
          <div class="p-6 flex-grow flex flex-col">
            <!-- Title -->
            <h3 class="text-xl font-bold text-primary group-hover:text-accent transition-colors mb-3">{feature.title}</h3>
            
            <p class="text-gray-600 leading-relaxed flex-grow">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>