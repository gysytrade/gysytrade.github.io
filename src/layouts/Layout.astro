---
import '../styles/global.css';
import LanguagePicker from '../components/LanguagePicker.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import WorldMapBg from '../components/WorldMapBg.astro';

interface Props {
  title: string;
  description?: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const { title, description = "Guangyuan Shengyuan International Trade Co., Ltd. - Connecting World Trade" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body class="flex flex-col min-h-screen relative">
    
    <!-- Global Map Background -->
    <div class="fixed inset-0 z-0 text-primary pointer-events-none overflow-hidden">
        <WorldMapBg />
    </div>

    <header class="fixed w-full z-50 bg-white/95 backdrop-blur-md shadow-sm transition-all duration-300">
      <nav class="container flex items-center justify-between h-20">
        <!-- Logo -->
        <a href={`/${lang}/`} class="flex items-center gap-3 group">
          <div class="w-14 h-14 bg-primary rounded-full flex items-center justify-center text-white shadow-md group-hover:shadow-lg transition-all relative overflow-hidden">
             <!-- Globe Icon SVG -->
             <svg xmlns="http://www.w3.org/2000/svg" class="h-9 w-9 text-accent relative z-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
             </svg>
             <div class="absolute inset-0 bg-gradient-to-tr from-primary-light to-transparent opacity-50"></div>
          </div>
          <div class="flex flex-col">
            <span class="text-xl font-bold font-serif text-primary leading-none tracking-tight">GUANGYUAN</span>
            <div class="flex items-center gap-1">
                <span class="text-[0.65rem] text-accent font-bold tracking-[0.2em] uppercase">Shengyuan</span>
                <span class="w-8 h-[1px] bg-gray-300"></span>
            </div>
          </div>
        </a>
        
        <div class="hidden md:flex items-center space-x-8">
          <a href={`/${lang}/`} class="text-sm font-medium text-primary hover:text-accent transition-colors">{t('nav.home')}</a>
          <a href={`/${lang}/about`} class="text-sm font-medium text-primary hover:text-accent transition-colors">{t('nav.about')}</a>
          <a href={`/${lang}/products`} class="text-sm font-medium text-primary hover:text-accent transition-colors">{t('nav.products')}</a>
          <a href={`/${lang}/contact`} class="text-sm font-medium text-primary hover:text-accent transition-colors">{t('nav.contact')}</a>
          
          <div class="border-l border-gray-200 h-6 mx-2"></div>
          
          <LanguagePicker />
          
          <a href={`/${lang}/contact`} class="btn-primary text-sm px-4 py-2 rounded-full ml-4">{t('nav.quote')}</a>
        </div>

        <!-- Mobile menu button (simplified) -->
        <button class="md:hidden text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </nav>
    </header>

    <main class="flex-grow pt-20 relative z-10">
      <slot />
    </main>

    <footer class="bg-primary text-white py-12 border-t border-gray-800 relative z-10">
      <div class="container grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="col-span-1 md:col-span-2">
          <h3 class="text-xl font-bold font-serif mb-4 flex items-center gap-2">
            <div class="w-8 h-8 border border-accent/50 rounded flex items-center justify-center text-accent text-sm">GS</div>
            <span class="text-white">Guangyuan Shengyuan</span> 
          </h3>
          <p class="text-gray-400 max-w-sm mb-6">
            {t('footer.desc')}
          </p>
          <!-- Embed Mini Map Frame in Footer -->
          <div class="w-full h-32 rounded-lg overflow-hidden opacity-80 hover:opacity-100 transition-opacity border border-gray-700">
             <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=105.7%2C32.3%2C106.0%2C32.5&amp;layer=mapnik&amp;marker=32.4336%2C105.8297"></iframe>
          </div>
        </div>
        <div>
          <h4 class="font-bold mb-4">Quick Links</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href={`/${lang}/`} class="hover:text-accent">{t('nav.home')}</a></li>
            <li><a href={`/${lang}/about`} class="hover:text-accent">{t('nav.about')}</a></li>
            <li><a href={`/${lang}/products`} class="hover:text-accent">{t('nav.products')}</a></li>
            <li><a href={`/${lang}/contact`} class="hover:text-accent">{t('nav.contact')}</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-bold mb-4">Contact Info</h4>
          <address class="text-gray-400 not-italic space-y-2">
            <p>{t('about.address')}</p>
            <p>{t('contact.phone')}: +86 0839 32XXXXX</p>
             <p>{t('contact.mobile')}: +86 138 8888 XXXX</p>
            <p>{t('contact.email')}: XXXX@gmail.com</p>
          </address>
        </div>
      </div>
      <div class="container mt-8 pt-8 border-t border-gray-800 text-center text-gray-500 text-sm">
        {t('footer.rights')}
      </div>
    </footer>
  </body>
</html>
