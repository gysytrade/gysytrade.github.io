---
import '../styles/global.css';
import LanguagePicker from '../components/LanguagePicker.astro';
import { getLangFromUrl, useTranslations, getRouteFromUrl, getLocalizedPath } from '../i18n/utils';
import { languages } from '../i18n/ui';
import WorldMapBg from '../components/WorldMapBg.astro';

interface Props {
  title: string;
  description?: string;
}

const lang = getLangFromUrl(Astro.url);
const route = getRouteFromUrl(Astro.url);
const t = useTranslations(lang);

// Create a helper function to generate URLs that properly handle the default language
const getLocalizedUrl = (path: string) => getLocalizedPath(path, lang);

// Logo text based on language
const getLogoText = () => {
  if (lang === 'zh') {
    return {
      main: '广元盛远',
      sub: '国际贸易'
    };
  }
  return {
    main: 'GUANGYUAN',
    sub: 'SHENGYUAN'
  };
};

const { title, description = "Guangyuan Shengyuan International Trade Co., Ltd. - Connecting World Trade" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <script is:inline src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
  </head>
  <body class="flex flex-col min-h-screen relative">
    
    <!-- Global Map Background -->
    <div class="fixed inset-0 z-0 text-primary pointer-events-none overflow-hidden">
        <WorldMapBg />
    </div>

    <header class="fixed w-full z-50 bg-white/95 backdrop-blur-md shadow-sm transition-all duration-300">
      <nav class="container flex items-center justify-between h-20">
        <!-- Logo -->
        <a href={getLocalizedUrl("/")} class="flex items-center gap-3 group">
          <img src="/logo.png" alt="Guangyuan Shengyuan Logo" class="h-16 w-auto object-contain" />
          <div class="flex items-center gap-2">
            <span class="text-xl font-bold font-serif text-primary leading-none tracking-tight">{getLogoText().main}</span>
            <span class="text-xl font-bold font-serif text-accent leading-none tracking-tight">{getLogoText().sub}</span>
          </div>
        </a>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center space-x-8">
          <a href={getLocalizedUrl("/")} class="text-sm font-semibold font-serif text-primary hover:text-accent transition-colors tracking-wide">{t('nav.home')}</a>
          <a href={getLocalizedUrl("/about")} class="text-sm font-semibold font-serif text-primary hover:text-accent transition-colors tracking-wide">{t('nav.about')}</a>
          <a href={getLocalizedUrl("/products")} class="text-sm font-semibold font-serif text-primary hover:text-accent transition-colors tracking-wide">{t('nav.products')}</a>
          <a href={getLocalizedUrl("/contact")} class="text-sm font-semibold font-serif text-primary hover:text-accent transition-colors tracking-wide">{t('nav.contact')}</a>
          
          <div class="border-l border-gray-200 h-6 mx-2"></div>
          
          <LanguagePicker />
        </div>

        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="md:hidden text-primary relative z-50 p-2 rounded-lg bg-white/90 shadow-md hover:bg-white focus:outline-none focus:ring-2 focus:ring-accent/50 transition-all duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </nav>
      
      <!-- Mobile Navigation Menu -->
      <div id="mobile-menu" class="fixed inset-0 bg-white z-[60] hidden opacity-0 transition-opacity duration-300">
        <!-- Close button -->
        <button id="close-menu-btn" class="absolute top-4 right-4 text-gray-700 hover:text-primary transition-all duration-200 p-1.5 rounded-full hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-primary/30">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        
        <!-- Navigation links container -->
        <div class="flex flex-col h-full pt-16 pb-4 px-4">
          <div class="w-full space-y-1.5">
            <a href={getLocalizedUrl("/")} class="block text-base font-semibold font-serif text-gray-800 py-2.5 px-4 rounded-md bg-gray-50 hover:bg-gray-100 hover:text-primary transition-all duration-300 transform hover:translate-x-1">{t('nav.home')}</a>
            <a href={getLocalizedUrl("/about")} class="block text-base font-semibold font-serif text-gray-800 py-2.5 px-4 rounded-md bg-gray-50 hover:bg-gray-100 hover:text-primary transition-all duration-300 transform hover:translate-x-1">{t('nav.about')}</a>
            <a href={getLocalizedUrl("/products")} class="block text-base font-semibold font-serif text-gray-800 py-2.5 px-4 rounded-md bg-gray-50 hover:bg-gray-100 hover:text-primary transition-all duration-300 transform hover:translate-x-1">{t('nav.products')}</a>
            <a href={getLocalizedUrl("/contact")} class="block text-base font-semibold font-serif text-gray-800 py-2.5 px-4 rounded-md bg-gray-50 hover:bg-gray-100 hover:text-primary transition-all duration-300 transform hover:translate-x-1">{t('nav.contact')}</a>
          </div>
          
          <div class="mt-6">
            <div class="relative group z-50">
              <button class="flex items-center gap-2 text-gray-700 hover:text-primary font-medium text-sm transition-all duration-200 p-2 rounded-md bg-gray-50 hover:bg-gray-100">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {languages[lang]}
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
            
              <div class="absolute right-0 mt-1.5 w-44 bg-white rounded-md shadow-lg border border-gray-200 py-1.5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform origin-top-right z-50">
                {Object.entries(languages).map(([label, name]) => (
                  <a 
                    href={`/${label === 'zh' ? '' : label + '/'}${route ? route : ''}`}
                    class={`block px-3 py-2 text-sm hover:bg-gray-50 transition-all duration-200 ${lang === label ? 'text-accent font-bold bg-primary/10' : 'text-gray-700'}`}
                  >
                    {name}
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </header>

    <main class="flex-grow pt-20 relative z-10">
      <slot />
    </main>

    <footer class="bg-primary text-white py-12 border-t border-gray-800 relative z-10">
      <div class="container grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="col-span-1 md:col-span-2">
          <h3 class="text-xl font-bold font-serif mb-4 flex items-center gap-2">
            <div class="w-8 h-8 border border-accent/50 rounded flex items-center justify-center text-accent text-sm">GS</div>
            <span class="text-white">Guangyuan Shengyuan</span> 
          </h3>
          <p class="text-gray-400 max-w-sm mb-6">
            {t('footer.desc')}
          </p>
          <!-- Footer Map -->
          <div id="footer-map" class="w-full h-32 rounded-lg overflow-hidden border border-gray-700 relative z-10 cursor-pointer" title="Click to view on AMap"></div>
        </div>
        <div>
          <h4 class="font-bold mb-4">Quick Links</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href={getLocalizedUrl("/")} class="hover:text-accent">{t('nav.home')}</a></li>
            <li><a href={getLocalizedUrl("/about")} class="hover:text-accent">{t('nav.about')}</a></li>
            <li><a href={getLocalizedUrl("/products")} class="hover:text-accent">{t('nav.products')}</a></li>
            <li><a href={getLocalizedUrl("/contact")} class="hover:text-accent">{t('nav.contact')}</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-bold mb-4">Contact Info</h4>
          <address class="text-gray-400 not-italic space-y-3">
            <p>{t('about.address')}</p>
            <p class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {t('contact.phone')}: <span class="font-mono">+86 0839-2339988</span>
            </p>
            <p class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {t('contact.mobile')}: <span class="font-mono">+86 188 8667 8244</span>
            </p>
            <p class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {t('contact.mobile2')}: <span class="font-mono">+86 188 8667 7244</span>
            </p>
            <p class="flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              {t('contact.email')}: <span class="font-mono">gysytrade@qq.com</span>
            </p>
          </address>
        </div>
      </div>
      <div class="container mt-8 pt-8 border-t border-gray-800 text-center text-gray-500 text-sm">
        {t('footer.rights')}
      </div>
    </footer>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const closeMenuBtn = document.getElementById('close-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuBtn && closeMenuBtn && mobileMenu) {
          const closeMenu = () => {
            mobileMenu.classList.add('opacity-0');
            setTimeout(() => {
              mobileMenu.classList.add('hidden');
            }, 300);
          };
          
          const openMenu = () => {
            mobileMenu.classList.remove('hidden');
            // Force a reflow before adding opacity
            void mobileMenu.offsetWidth;
            mobileMenu.classList.remove('opacity-0');
          };
          
          // Toggle menu when clicking on hamburger button
          mobileMenuBtn.addEventListener('click', () => {
            if (mobileMenu.classList.contains('hidden')) {
              openMenu();
            } else {
              closeMenu();
            }
          });
          
          // Close menu when clicking on close button
          closeMenuBtn.addEventListener('click', closeMenu);
          
          // Close menu when clicking on links
          const mobileLinks = mobileMenu.querySelectorAll('a');
          mobileLinks.forEach(link => {
            link.addEventListener('click', closeMenu);
          });
          
          // Close menu when clicking outside
          document.addEventListener('click', (e) => {
            if (!mobileMenuBtn.contains(e.target as Node) && !closeMenuBtn.contains(e.target as Node) && !mobileMenu.contains(e.target as Node)) {
              closeMenu();
            }
          });
          
          // Close menu when pressing escape key
          document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && !mobileMenu.classList.contains('hidden')) {
              closeMenu();
            }
          });
        }
      });
    </script>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        if (typeof L !== 'undefined') {
          // Guangyuan Wanda Plaza Coordinates (GCJ-02) - Precise Location
          const lat = 32.424491;
          const lng = 105.877723;
          const targetUrl = 'https://www.amap.com/search?query=广元万达广场';
          
          // Function to init map
          function initMap(id, options) {
            const container = document.getElementById(id);
            if (!container) return;
            
            // Check if map is already initialized
            if (container._leaflet_id) return;
            
            const map = L.map(id, {
              center: [lat, lng],
              zoom: options.zoom || 14,
              zoomControl: options.zoomControl ?? true,
              attributionControl: false,
              dragging: options.interactive ?? true,
              touchZoom: options.interactive ?? true,
              scrollWheelZoom: false, // Disable scroll zoom by default to prevent page scroll blocking
              doubleClickZoom: options.interactive ?? true,
              boxZoom: options.interactive ?? true
            });
            
            L.tileLayer('https://webrd01.is.autonavi.com/appmaptile?lang=zh_cn&size=1&scale=1&style=8&x={x}&y={y}&z={z}', {
              maxZoom: 18,
              minZoom: 3
            }).addTo(map);

            const marker = L.marker([lat, lng]).addTo(map);
            
            if (options.popup) {
                marker.bindPopup(options.popup).openPopup();
            }
            
            if (options.clickToOpen) {
                 map.on('click', () => window.open(targetUrl, '_blank'));
                 marker.on('click', () => window.open(targetUrl, '_blank'));
                 // Change cursor to pointer
                 container.style.cursor = 'pointer';
            }
          }

          // Initialize Footer Map (Static, Clickable)
          initMap('footer-map', {
            zoom: 14,
            zoomControl: false,
            interactive: false,
            clickToOpen: true
          });
          
          // Initialize Contact Page Map (Interactive)
          initMap('contact-map-container', {
            zoom: 16,
            zoomControl: true,
            interactive: true,
            clickToOpen: false,
            popup: "<b>广元盛远 (Guangyuan Shengyuan)</b><br>广元万达广场 (Wanda Plaza, Guangyuan)"
          });
        }
      });
    </script>
  </body>
</html>
