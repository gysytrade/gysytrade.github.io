---
import '../styles/global.css';
import LanguagePicker from '../components/LanguagePicker.astro';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import WorldMapBg from '../components/WorldMapBg.astro';

interface Props {
  title: string;
  description?: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Create a helper function to generate URLs that properly handle the default language
const getLocalizedUrl = (path: string) => {
  return lang === 'zh' ? path : `/${lang}${path}`;
};

// Logo text based on language
const getLogoText = () => {
  if (lang === 'zh') {
    return {
      main: '广元盛远',
      sub: '国际贸易'
    };
  }
  return {
    main: 'GUANGYUAN',
    sub: 'SHENGYUAN'
  };
};

const { title, description = "Guangyuan Shengyuan International Trade Co., Ltd. - Connecting World Trade" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
  </head>
  <body class="flex flex-col min-h-screen relative">
    
    <!-- Global Map Background -->
    <div class="fixed inset-0 z-0 text-primary pointer-events-none overflow-hidden">
        <WorldMapBg />
    </div>

    <header class="fixed w-full z-50 bg-white/95 backdrop-blur-md shadow-sm transition-all duration-300">
      <nav class="container flex items-center justify-between h-20">
        <!-- Logo -->
        <a href={getLocalizedUrl("/")} class="flex items-center gap-3 group">
          <img src="/logo.svg" alt="Guangyuan Shengyuan Logo" class="h-16 w-auto object-contain" />
          <div class="flex items-center gap-2">
            <span class="text-xl font-bold font-serif text-primary leading-none tracking-tight">{getLogoText().main}</span>
            <span class="text-xl font-bold font-serif text-accent leading-none tracking-tight">{getLogoText().sub}</span>
          </div>
        </a>
        
        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center space-x-8">
          <a href={getLocalizedUrl("/")} class="text-sm font-semibold font-serif text-primary hover:text-accent transition-colors tracking-wide">{t('nav.home')}</a>
          <a href={getLocalizedUrl("/about")} class="text-sm font-semibold font-serif text-primary hover:text-accent transition-colors tracking-wide">{t('nav.about')}</a>
          <a href={getLocalizedUrl("/products")} class="text-sm font-semibold font-serif text-primary hover:text-accent transition-colors tracking-wide">{t('nav.products')}</a>
          <a href={getLocalizedUrl("/contact")} class="text-sm font-semibold font-serif text-primary hover:text-accent transition-colors tracking-wide">{t('nav.contact')}</a>
          
          <div class="border-l border-gray-200 h-6 mx-2"></div>
          
          <LanguagePicker />
        </div>

        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="md:hidden text-primary relative z-50 p-2 focus:outline-none">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </nav>
      
      <!-- Mobile Navigation Menu -->
      <div id="mobile-menu" class="fixed inset-0 bg-white z-[60] hidden opacity-0 transition-opacity duration-300">
        <div class="flex flex-col h-full pt-20 p-6">
          <a href={getLocalizedUrl("/")} class="text-lg font-medium font-serif text-primary py-3 border-b border-gray-100 hover:text-accent transition-colors">{t('nav.home')}</a>
          <a href={getLocalizedUrl("/about")} class="text-lg font-medium font-serif text-primary py-3 border-b border-gray-100 hover:text-accent transition-colors">{t('nav.about')}</a>
          <a href={getLocalizedUrl("/products")} class="text-lg font-medium font-serif text-primary py-3 border-b border-gray-100 hover:text-accent transition-colors">{t('nav.products')}</a>
          <a href={getLocalizedUrl("/contact")} class="text-lg font-medium font-serif text-primary py-3 border-b border-gray-100 hover:text-accent transition-colors">{t('nav.contact')}</a>
          
          <div class="mt-6 pt-6 border-t border-gray-200">
            <LanguagePicker />
          </div>
        </div>
      </div>
    </header>

    <main class="flex-grow pt-20 relative z-10">
      <slot />
    </main>

    <footer class="bg-primary text-white py-12 border-t border-gray-800 relative z-10">
      <div class="container grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="col-span-1 md:col-span-2">
          <h3 class="text-xl font-bold font-serif mb-4 flex items-center gap-2">
            <div class="w-8 h-8 border border-accent/50 rounded flex items-center justify-center text-accent text-sm">GS</div>
            <span class="text-white">Guangyuan Shengyuan</span> 
          </h3>
          <p class="text-gray-400 max-w-sm mb-6">
            {t('footer.desc')}
          </p>
          <!-- Embed Mini Map Frame in Footer -->
          <div class="w-full h-32 rounded-lg overflow-hidden opacity-80 hover:opacity-100 transition-opacity border border-gray-700">
             <iframe width="100%" height="100%" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.openstreetmap.org/export/embed.html?bbox=105.7%2C32.3%2C106.0%2C32.5&amp;layer=mapnik&amp;marker=32.4336%2C105.8297"></iframe>
          </div>
        </div>
        <div>
          <h4 class="font-bold mb-4">Quick Links</h4>
          <ul class="space-y-2 text-gray-400">
            <li><a href={getLocalizedUrl("/")} class="hover:text-accent">{t('nav.home')}</a></li>
            <li><a href={getLocalizedUrl("/about")} class="hover:text-accent">{t('nav.about')}</a></li>
            <li><a href={getLocalizedUrl("/products")} class="hover:text-accent">{t('nav.products')}</a></li>
            <li><a href={getLocalizedUrl("/contact")} class="hover:text-accent">{t('nav.contact')}</a></li>
          </ul>
        </div>
        <div>
          <h4 class="font-bold mb-4">Contact Info</h4>
          <address class="text-gray-400 not-italic space-y-2">
            <p>{t('about.address')}</p>
            <p>{t('contact.phone')}: +86 0839 32XXXXX</p>
             <p>{t('contact.mobile')}: +86 138 8888 XXXX</p>
            <p>{t('contact.email')}: XXXX@gmail.com</p>
          </address>
        </div>
      </div>
      <div class="container mt-8 pt-8 border-t border-gray-800 text-center text-gray-500 text-sm">
        {t('footer.rights')}
      </div>
    </footer>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuBtn && mobileMenu) {
          mobileMenuBtn.addEventListener('click', () => {
            // Toggle menu visibility with transition
            if (mobileMenu.classList.contains('hidden')) {
              mobileMenu.classList.remove('hidden');
              // Force a reflow before adding opacity
              void mobileMenu.offsetWidth;
              mobileMenu.classList.remove('opacity-0');
            } else {
              mobileMenu.classList.add('opacity-0');
              // Wait for transition to complete before hiding
              setTimeout(() => {
                mobileMenu.classList.add('hidden');
              }, 300);
            }
          });
          
          // Close menu when clicking on links
          const mobileLinks = mobileMenu.querySelectorAll('a');
          mobileLinks.forEach(link => {
            link.addEventListener('click', () => {
              mobileMenu.classList.add('opacity-0');
              setTimeout(() => {
                mobileMenu.classList.add('hidden');
              }, 300);
            });
          });
          
          // Close menu when clicking outside
          document.addEventListener('click', (e) => {
            if (!mobileMenuBtn.contains(e.target) && !mobileMenu.contains(e.target)) {
              mobileMenu.classList.add('opacity-0');
              setTimeout(() => {
                mobileMenu.classList.add('hidden');
              }, 300);
            }
          });
        }
      });
    </script>
  </body>
</html>
