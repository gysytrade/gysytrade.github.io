---
import Layout from '../layouts/Layout.astro';
import { useTranslations } from '../i18n/utils';
import PageHeader from '../components/PageHeader.astro';

// Use zh as default language for root path
const lang = 'zh';
const t = useTranslations(lang);
---

<Layout title={`${t('nav.about')} - Guangyuan Shengyuan International Trade`}>
  <PageHeader 
    title={t('about.title')} 
    subtitle={t('about.desc')} 
    bgImage="https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&q=80&w=2069"
    textColor="white"
  />

  <section class="section-padding">
    <div class="container grid grid-cols-1 lg:grid-cols-2 gap-16">
      <div class="prose prose-lg prose-slate">
        <h3 class="text-2xl font-bold font-serif text-primary mb-4">{t('nav.about')}</h3>
        <p>
          {t('about.desc')}
        </p>
        <p>
          {t('about.leadership')}
        </p>
        
        <h3 class="text-2xl font-bold font-serif text-primary mt-8 mb-4">Company Details</h3>
        <ul class="list-none pl-0 space-y-3">
            <li><strong>{t('about.company_name')}</strong></li>
            <li><strong>Unified Social Credit Code:</strong> 91510802MAK30JGA1A</li>
            <li><strong>{t('about.legal_rep')}</strong></li>
            <li><strong>Establishment Date:</strong> 2025-12-02</li>
            <li><strong>{t('about.address')}</strong></li>
        </ul>
      </div>

      <div class="space-y-8">
        <div class="bg-slate-50 p-8 rounded-2xl border border-slate-100 shadow-sm">
            <h3 class="text-xl font-bold mb-4 text-center">Business License</h3>
            <div class="relative group cursor-pointer overflow-hidden rounded-lg border border-gray-200">
                <img 
                    src="/营业执照.jpg" 
                    alt="Business License of Guangyuan Shengyuan International Trade Co., Ltd." 
                    class="w-full h-auto transform group-hover:scale-105 transition-transform duration-500"
                />
            </div>
            <p class="text-center text-sm text-gray-500 mt-2">Click to view full size</p>
        </div>
      </div>
    </div>
  </section>
</Layout>