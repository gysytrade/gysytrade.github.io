---
import Layout from '../../../layouts/Layout.astro';
import { languages } from '../../../i18n/ui';
import { useTranslations } from '../../../i18n/utils';
import PageHeader from '../../../components/PageHeader.astro';

export function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);

const bulkServices = [
  {
    title: t('logistics.bulk_service_1_title'),
    description: t('logistics.bulk_service_1_desc'),
    features: [
      t('logistics.bulk_service_1_feature_1'),
      t('logistics.bulk_service_1_feature_2'),
      t('logistics.bulk_service_1_feature_3'),
      t('logistics.bulk_service_1_feature_4')
    ]
  },
  {
    title: t('logistics.bulk_service_2_title'),
    description: t('logistics.bulk_service_2_desc'),
    features: [
      t('logistics.bulk_service_2_feature_1'),
      t('logistics.bulk_service_2_feature_2'),
      t('logistics.bulk_service_2_feature_3'),
      t('logistics.bulk_service_2_feature_4')
    ]
  },
  {
    title: t('logistics.bulk_service_3_title'),
    description: t('logistics.bulk_service_3_desc'),
    features: [
      t('logistics.bulk_service_3_feature_1'),
      t('logistics.bulk_service_3_feature_2'),
      t('logistics.bulk_service_3_feature_3'),
      t('logistics.bulk_service_3_feature_4')
    ]
  }
];

const equipmentTypes = [
  { name: t('logistics.equipment_1_name'), code: t('logistics.equipment_1_code'), desc: t('logistics.equipment_1_desc') },
  { name: t('logistics.equipment_2_name'), code: t('logistics.equipment_2_code'), desc: t('logistics.equipment_2_desc') },
  { name: t('logistics.equipment_3_name'), code: t('logistics.equipment_3_code'), desc: t('logistics.equipment_3_desc') },
  { name: t('logistics.equipment_4_name'), code: t('logistics.equipment_4_code'), desc: t('logistics.equipment_4_desc') },
  { name: t('logistics.equipment_5_name'), code: t('logistics.equipment_5_code'), desc: t('logistics.equipment_5_desc') },
  { name: t('logistics.equipment_6_name'), code: t('logistics.equipment_6_code'), desc: t('logistics.equipment_6_desc') }
];

const scenarios = [
  { title: t('logistics.scenario_1_title'), desc: t('logistics.scenario_1_desc'), icon: 'cog' },
  { title: t('logistics.scenario_2_title'), desc: t('logistics.scenario_2_desc'), icon: 'building' },
  { title: t('logistics.scenario_3_title'), desc: t('logistics.scenario_3_desc'), icon: 'leaf' },
  { title: t('logistics.scenario_4_title'), desc: t('logistics.scenario_4_desc'), icon: 'fire' }
];
---

<Layout title={`${t('logistics.bulk_special_title')} - ${t('logistics.title')} - ${t('site.name')}`}>
  <PageHeader
    title={t('logistics.bulk_special_title')}
    subtitle={t('logistics.bulk_special_subtitle')}
    bgImage="https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?auto=format&fit=crop&q=80&w=2070"
    textColor="white"
  />

  <section class="section-padding bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold font-serif text-primary mb-6">
          {t('logistics.bulk_special_intro_title')}
        </h2>
        <p class="text-lg text-gray-600 leading-relaxed">
          {t('logistics.bulk_special_intro_desc')}
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-16">
        {bulkServices.map((service) => (
          <div class="bg-slate-50 p-8 rounded-2xl border border-slate-100 h-full">
            <h3 class="text-xl font-bold text-primary mb-4">{service.title}</h3>
            <p class="text-gray-600 mb-6">{service.description}</p>
            <ul class="space-y-2">
              {service.features.map((feature) => (
                <li class="flex items-center gap-2 text-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <h3 class="text-2xl font-bold text-primary text-center mb-8">{t('logistics.equipment_title')}</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {equipmentTypes.map((equip) => (
          <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-primary">{equip.name}</h4>
                <span class="text-sm text-accent font-mono">{equip.code}</span>
              </div>
            </div>
            <p class="text-gray-600 text-sm">{equip.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-padding bg-slate-50">
    <div class="container">
      <h2 class="text-3xl font-bold font-serif text-primary text-center mb-12">{t('logistics.scenario_title')}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {scenarios.map((item) => (
          <div class="bg-white p-6 rounded-xl shadow-sm text-center">
            <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                {item.icon === 'cog' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />}
                {item.icon === 'building' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />}
                {item.icon === 'leaf' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />}
                {item.icon === 'fire' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />}
              </svg>
            </div>
            <h4 class="font-bold text-primary mb-2">{item.title}</h4>
            <p class="text-gray-600 text-sm">{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-padding bg-primary text-white">
    <div class="container text-center">
      <h2 class="text-3xl md:text-4xl font-bold font-serif mb-4">
        {t('logistics.bulk_cta_title')}
      </h2>
      <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
        {t('logistics.bulk_cta_desc')}
      </p>
      <a href={`/${lang}/contact`} class="btn-accent text-lg px-10 py-5 rounded-full inline-block">
        {t('logistics.bulk_cta_button')}
      </a>
    </div>
  </section>
</Layout>
