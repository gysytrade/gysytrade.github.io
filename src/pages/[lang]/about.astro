---
import Layout from '../../layouts/Layout.astro';
import { languages } from '../../i18n/ui'; // Import to generate paths
import { useTranslations } from '../../i18n/utils';

import PageHeader from '../../components/PageHeader.astro';

export function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);
---

<Layout title={`${t('nav.about')} - Guangyuan Shengyuan International Trade`}>
  <PageHeader
    title={t('about.title')}
    subtitle={t('about.desc')}
    bgImage="https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&q=80&w=2069"
    textColor="white"
  />

  <section class="section-padding">
    <div class="container">
      <!-- Main Content Section -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
        <!-- Left: Company Introduction -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Company Overview -->
          <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-12 h-12 bg-gradient-to-br from-primary to-accent rounded-xl flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold font-serif text-primary">About Us</h3>
            </div>
            <div class="prose prose-lg prose-slate max-w-none">
              <p class="text-gray-700 leading-relaxed mb-4">
                Established in 2025, Guangyuan Shengyuan International Trade Co., Ltd. is based in Guangyuan, Sichuan, specializing in comprehensive international trade services across textiles, construction materials, electronics, and agricultural products. We uphold integrity, innovation, and mutual benefit to promote global trade cooperation, delivering quality products and services to clients worldwide.
              </p>
              <p class="text-gray-700 leading-relaxed mb-4">
                As our business grew and client needs expanded, we established Guangyuan Shengyuan International Logistics Co., Ltd., focusing on providing efficient and reliable integrated logistics and supply chain solutions. Both companies work in synergy to form a "Trade + Logistics" dual-drive service system, offering end-to-end support from procurement to delivery, further strengthening our comprehensive service capabilities in international trade.
              </p>
              <p class="text-gray-700 leading-relaxed">
                We look forward to working with more partners to create a connected and mutually beneficial global trade landscape.
              </p>
            </div>
          </div>

          <!-- Business Philosophy -->
          <div class="bg-gradient-to-br from-slate-50 to-white p-8 rounded-2xl border border-slate-100">
            <h4 class="text-xl font-bold font-serif text-primary mb-6">Our Values</h4>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <div class="text-center p-6 bg-white rounded-xl shadow-sm border border-gray-100">
                <div class="w-14 h-14 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <h5 class="font-bold text-gray-900 mb-2">Integrity</h5>
                <p class="text-sm text-gray-600">Build trust through integrity</p>
              </div>
              <div class="text-center p-6 bg-white rounded-xl shadow-sm border border-gray-100">
                <div class="w-14 h-14 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
                <h5 class="font-bold text-gray-900 mb-2">Innovation</h5>
                <p class="text-sm text-gray-600">Lead industry development</p>
              </div>
              <div class="text-center p-6 bg-white rounded-xl shadow-sm border border-gray-100">
                <div class="w-14 h-14 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <h5 class="font-bold text-gray-900 mb-2">Win-Win</h5>
                <p class="text-sm text-gray-600">Grow together with clients</p>
              </div>
            </div>
          </div>

          <!-- Company Details -->
          <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
            <h4 class="text-xl font-bold font-serif text-primary mb-6">Company Details</h4>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="flex items-start gap-3 p-4 bg-slate-50 rounded-lg">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-500 mb-1">Company Name</p>
                  <p class="font-semibold text-gray-900">Guangyuan Shengyuan International Trade (Logistics) Co., Ltd.</p>
                </div>
              </div>
              <div class="flex items-start gap-3 p-4 bg-slate-50 rounded-lg">
                <div class="w-10 h-10 bg-accent/10 rounded-lg flex items-center justify-center shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-500 mb-1">Unified Social Credit Code</p>
                  <p class="font-semibold text-gray-900 font-mono">91510802MAK30JGA1A</p>
                </div>
              </div>
              <div class="flex items-start gap-3 p-4 bg-slate-50 rounded-lg">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-500 mb-1">Legal Representative</p>
                  <p class="font-semibold text-gray-900">Xie Jinfu</p>
                </div>
              </div>
              <div class="flex items-start gap-3 p-4 bg-slate-50 rounded-lg">
                <div class="w-10 h-10 bg-accent/10 rounded-lg flex items-center justify-center shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-500 mb-1">Establishment Date</p>
                  <p class="font-semibold text-gray-900">December 2, 2025</p>
                </div>
              </div>
              <div class="flex items-start gap-3 p-4 bg-slate-50 rounded-lg md:col-span-2">
                <div class="w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-gray-500 mb-1">Address</p>
                  <p class="font-semibold text-gray-900">Room 10-5-6, Wanda Center, Wanyuan Subdistrict, Lizhou District, Guangyuan, Sichuan</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right: Business Licenses -->
        <div class="lg:col-span-1 space-y-6">
          <div class="sticky top-24">
            <h4 class="text-xl font-bold font-serif text-primary mb-6 flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Business Licenses
            </h4>

            <!-- Trade License -->
            <div class="bg-white rounded-2xl shadow-md border border-gray-100 overflow-hidden mb-6">
              <div class="bg-gradient-to-r from-primary to-primary-dark p-4">
                <h5 class="text-white font-semibold text-center">Trade Business License</h5>
              </div>
              <div class="p-6">
                <div class="relative group cursor-pointer overflow-hidden rounded-lg border border-gray-200">
                  <img
                    src="/yingyezhizhao.jpg"
                    alt="Business License of Guangyuan Shengyuan International Trade Co., Ltd."
                    class="w-full h-auto transform group-hover:scale-105 transition-transform duration-500"
                  />
                </div>
                <p class="text-center text-xs text-gray-500 mt-3 flex items-center justify-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Click to view full size
                </p>
              </div>
            </div>

            <!-- Logistics License -->
            <div class="bg-white rounded-2xl shadow-md border border-gray-100 overflow-hidden">
              <div class="bg-gradient-to-r from-accent to-accent-dark p-4">
                <h5 class="text-white font-semibold text-center">Logistics Business License</h5>
              </div>
              <div class="p-6">
                <div class="relative group cursor-pointer overflow-hidden rounded-lg border border-gray-200">
                  <img
                    src="/yingyezhizao2.jpg"
                    alt="Business License of Guangyuan Shengyuan International Logistics Co., Ltd."
                    class="w-full h-auto transform group-hover:scale-105 transition-transform duration-500"
                  />
                </div>
                <p class="text-center text-xs text-gray-500 mt-3 flex items-center justify-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  Click to view full size
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
