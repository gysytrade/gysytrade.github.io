---
import Layout from '../../layouts/Layout.astro';
import { languages } from '../../i18n/ui';
import { useTranslations } from '../../i18n/utils';
import PageHeader from '../../components/PageHeader.astro';

export function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);

const logisticsServices = [
  {
    title: t('logistics.service_1_title'),
    description: t('logistics.service_1_desc'),
    icon: 'container',
    link: `/${lang}/logistics/fcl-lcl`,
    image: 'https://images.unsplash.com/photo-1578575437130-527eed3abbec?auto=format&fit=crop&q=80&w=2070',
    alt: '海运服务',
    shortDesc: '资源优势、专业高效'
  },
  {
    title: t('logistics.service_2_title'),
    description: t('logistics.service_2_desc'),
    icon: 'ship',
    link: `/${lang}/logistics/bulk-special`,
    image: 'https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?auto=format&fit=crop&q=80&w=2070',
    alt: '空运服务',
    shortDesc: '时效保障，价格优势'
  },
  {
    title: t('logistics.service_3_title'),
    description: t('logistics.service_3_desc'),
    icon: 'customs',
    link: `/${lang}/logistics/customs-clearance`,
    image: 'https://images.unsplash.com/photo-1450101499163-c8848c66ca85?auto=format&fit=crop&q=80&w=2070',
    alt: '铁路服务',
    shortDesc: '费用透明，运输无忧'
  },
  {
    title: t('logistics.service_4_title'),
    description: t('logistics.service_4_desc'),
    icon: 'multimodal',
    link: `/${lang}/logistics/multimodal`,
    image: 'https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?auto=format&fit=crop&q=80&w=2070',
    alt: '多式联运',
    shortDesc: '"一站式"综合物流服务'
  }
];

const routes = [
  t('logistics.route_1'),
  t('logistics.route_2'),
  t('logistics.route_3'),
  t('logistics.route_4'),
  t('logistics.route_5')
];

const feederRegions = [
  {
    title: t('logistics.feeder_region_1_title'),
    description: t('logistics.feeder_region_1_desc')
  },
  {
    title: t('logistics.feeder_region_2_title'),
    description: t('logistics.feeder_region_2_desc')
  },
  {
    title: t('logistics.feeder_region_3_title'),
    description: t('logistics.feeder_region_3_desc')
  },
  {
    title: t('logistics.feeder_region_4_title'),
    description: t('logistics.feeder_region_4_desc')
  }
];

const feederAdvantages = [
  {
    title: t('logistics.feeder_advantage_1_title'),
    description: t('logistics.feeder_advantage_1_desc')
  },
  {
    title: t('logistics.feeder_advantage_2_title'),
    description: t('logistics.feeder_advantage_2_desc')
  },
  {
    title: t('logistics.feeder_advantage_3_title'),
    description: t('logistics.feeder_advantage_3_desc')
  },
  {
    title: t('logistics.feeder_advantage_4_title'),
    description: t('logistics.feeder_advantage_4_desc')
  }
];
---

<Layout title={`${t('logistics.title')} - ${t('site.name')}`}>
  <PageHeader
    title={t('logistics.title')}
    subtitle={t('logistics.subtitle')}
    bgImage="https://images.unsplash.com/photo-1578575437130-527eed3abbec?auto=format&fit=crop&q=80&w=2070"
    textColor="white"
  />

  <section class="section-padding bg-white">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold font-serif text-primary mb-6">
          {t('logistics.network_title')}
        </h2>
        <p class="text-lg text-gray-600 leading-relaxed mb-8">
          {t('logistics.intro')}
        </p>
        
        <div class="grid grid-cols-3 gap-8 mt-12">
          <div class="text-center">
            <div class="text-4xl font-bold text-accent mb-2">80+</div>
            <div class="text-gray-600">{t('logistics.stats_countries')}</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-accent mb-2">240+</div>
            <div class="text-gray-600">{t('logistics.stats_points')}</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-accent mb-2">5</div>
            <div class="text-gray-600">{t('logistics.stats_routes')}</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section-padding bg-slate-50">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold font-serif text-primary text-center mb-4">
          {t('logistics.routes_title')}
        </h2>
        <p class="text-lg text-gray-600 text-center mb-12">
          {t('logistics.routes_desc')}
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {routes.map((route, index) => (
            <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-accent/10 rounded-lg flex items-center justify-center shrink-0">
                  <span class="text-accent font-bold">{index + 1}</span>
                </div>
                <p class="text-gray-700 font-medium">{route}</p>
              </div>
            </div>
          ))}
        </div>
        
        <div class="mt-12 bg-primary/5 p-8 rounded-2xl">
          <h3 class="text-xl font-bold text-primary mb-4">{t('logistics.feeder_title')}</h3>
          <p class="text-gray-600">{t('logistics.feeder_desc')}</p>
        </div>
      </div>
    </div>
  </section>

  <section class="section-padding bg-white">
    <div class="container">
      <h2 class="text-3xl md:text-4xl font-bold font-serif text-primary text-center mb-4">
        {t('logistics.services_title')}
      </h2>
      <p class="text-lg text-gray-600 text-center mb-12 max-w-3xl mx-auto">
        {t('logistics.services_desc')}
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {logisticsServices.map((service) => (
          <a href={service.link} class="group block">
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow">
              <div class="relative h-48 overflow-hidden">
                <img 
                  src={service.image} 
                  alt={service.alt}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
              </div>
              
              <div class="p-6">
                <h3 class="text-xl font-bold text-primary mb-3 group-hover:text-accent transition-colors">
                  {service.title}
                </h3>
                <p class="text-gray-600 mb-4 line-clamp-2">{service.description}</p>
                <p class="text-gray-700 font-medium mb-4">{service.shortDesc}</p>
                <span class="text-accent font-medium flex items-center gap-2">
                  {t('logistics.learn_more')}
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section-padding bg-slate-50">
    <div class="container">
      <h2 class="text-3xl font-bold font-serif text-primary text-center mb-12">{t('logistics.feeder_regions_title')}</h2>
      <p class="text-lg text-gray-600 text-center mb-12 max-w-3xl mx-auto">
        {t('logistics.feeder_desc')}
      </p>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {feederRegions.map((region, index) => (
          <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-accent/10 rounded-lg flex items-center justify-center shrink-0">
                <span class="text-accent font-bold">{index + 1}</span>
              </div>
              <div>
                <h3 class="text-lg font-bold text-primary mb-3">{region.title}</h3>
                <p class="text-gray-600">{region.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-padding bg-white">
    <div class="container">
      <h2 class="text-3xl font-bold font-serif text-primary text-center mb-12">{t('logistics.feeder_advantages_title')}</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {feederAdvantages.map((item, index) => (
          <div class="bg-slate-50 p-6 rounded-xl border border-gray-100">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-accent/10 rounded-lg flex items-center justify-center shrink-0">
                <span class="text-accent font-bold">{index + 1}</span>
              </div>
              <div>
                <h3 class="text-lg font-bold text-primary mb-3">{item.title}</h3>
                <p class="text-gray-600">{item.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Modern CTA Section -->
  <section class="py-20 relative overflow-hidden bg-gradient-to-b from-slate-50 to-white">
    <!-- Subtle decorative background -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-1/4 left-1/5 w-96 h-96 bg-primary/5 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/5 w-80 h-80 bg-accent/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>
    
    <!-- Subtle pattern overlay -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,.1) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container relative z-10 text-center">
      <!-- Icon decoration -->
      <div class="flex justify-center mb-8">
        <div class="w-20 h-20 bg-gradient-to-br from-primary to-accent rounded-2xl flex items-center justify-center shadow-lg shadow-primary/20 animate-bounce" style="animation-duration: 3s;">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
      </div>
      
      <h2 class="text-3xl md:text-4xl font-bold font-serif mb-6 text-primary">
        {t('cta.title')}
      </h2>
      <p class="text-lg text-gray-600 mb-10 max-w-2xl mx-auto leading-relaxed">
        {t('cta.subtitle')}
      </p>
      
      <a href={`/${lang}/contact`} class="inline-flex items-center justify-center gap-2 bg-gradient-to-r from-primary to-accent hover:from-primary-dark hover:to-accent-dark text-white text-base px-10 py-4 rounded-full group transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1 font-semibold">
        {t('cta.button')}
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
      
      <!-- Trust indicators with icons -->
      <div class="mt-12 flex items-center justify-center gap-10">
        <div class="flex items-center gap-2 text-gray-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-sm font-medium">Professional Team</span>
        </div>
        <div class="flex items-center gap-2 text-gray-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
          <span class="text-sm font-medium">Efficient Service</span>
        </div>
        <div class="flex items-center gap-2 text-gray-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
          </svg>
          <span class="text-sm font-medium">Global Network</span>
        </div>
      </div>
    </div>
  </section>
</Layout>