---
import Layout from '../../layouts/Layout.astro';
import FeatureGridEnhanced from '../../components/FeatureGridEnhanced.astro';
import PageHeader from '../../components/PageHeader.astro';
import { languages } from '../../i18n/ui';
import { useTranslations } from '../../i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages).map(lang => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);

const products = [
  {
    title: t('feature.textiles'),
    description: t('feature.textiles_desc'),
  },
  {
    title: t('feature.apparel'),
    description: t('feature.apparel_desc'),
  },
  {
    title: t('feature.stationery'),
    description: t('feature.stationery_desc'),
  },
  {
    title: t('feature.appliances'),
    description: t('feature.appliances_desc'),
  },
  {
    title: t('feature.agriculture'),
    description: t('feature.agriculture_desc'),
  },
  {
    title: t('feature.construction'),
    description: t('feature.construction_desc'),
  }
];
---

<Layout title={`${t('nav.products')} - Guangyuan Shengyuan International Trade`}>
  <PageHeader 
    title={t('nav.products')} 
    subtitle={t('about.desc')} 
    bgImage="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?auto=format&fit=crop&q=80&w=2070"
    textColor="black"
  />

  <section>
    <FeatureGridEnhanced title={t('business.title')} features={products} />
  </section>

  <section class="py-20 bg-slate-50/80 backdrop-blur-sm">
    <div class="container text-center max-w-3xl">
        <h2 class="text-3xl font-bold font-serif mb-8">Internet Sales & Technology</h2>
        <p class="text-gray-600 mb-8 leading-relaxed">
            Beyond traditional trade, we are actively engaged in internet sales and technology services. 
            We provide technical development, consultation, and promotion services to help modernize trade practices.
        </p>
        <a href={`/${lang}/contact`} class="btn-primary">{t('nav.contact')}</a>
    </div>
  </section>
</Layout>
