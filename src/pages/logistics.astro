---
import Layout from '../layouts/Layout.astro';
import { useTranslations } from '../i18n/utils';
import PageHeader from '../components/PageHeader.astro';

// Use zh as default language for root path
const lang = 'zh';
const t = useTranslations(lang);

const logisticsServices = [
  {
    title: t('logistics.service_1_title'),
    description: t('logistics.service_1_desc'),
    icon: 'container',
    link: '/logistics/fcl-lcl',
    image: 'https://images.unsplash.com/photo-1578575437130-527eed3abbec?auto=format&fit=crop&q=80&w=800',
    alt: '海运整箱/拼箱服务',
    shortDesc: '资源优势、专业高效'
  },
  {
    title: t('logistics.service_2_title'),
    description: t('logistics.service_2_desc'),
    icon: 'ship',
    link: '/logistics/bulk-special',
    image: 'https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?auto=format&fit=crop&q=80&w=800',
    alt: '散货船/特种箱海运',
    shortDesc: '时效保障、专业可靠'
  },
  {
    title: t('logistics.service_3_title'),
    description: t('logistics.service_3_desc'),
    icon: 'customs',
    link: '/logistics/customs-clearance',
    image: 'https://images.unsplash.com/photo-1450101499163-c8848c66ca85?auto=format&fit=crop&q=80&w=800',
    alt: '进出口清关报关',
    shortDesc: '费用透明、运输无忧'
  }
];

const routes = [
  t('logistics.route_1'),
  t('logistics.route_2'),
  t('logistics.route_3'),
  t('logistics.route_4'),
  t('logistics.route_5')
];
---

<Layout title={`${t('logistics.title')} - ${t('site.name')}`}>
  <PageHeader
    title={t('logistics.title')}
    subtitle={t('logistics.subtitle')}
    bgImage="https://images.unsplash.com/photo-1578575437130-527eed3abbec?auto=format&fit=crop&q=80&w=2070"
    textColor="white"
  />

  <!-- Hero Stats Section -->
  <section class="section-padding bg-gradient-to-br from-white to-slate-50">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Left: Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 text-center hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <div class="text-4xl font-bold text-accent mb-2">80+</div>
            <div class="text-gray-600 text-sm">{t('logistics.stats_countries')}</div>
          </div>
          <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 text-center hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <div class="text-4xl font-bold text-accent mb-2">240+</div>
            <div class="text-gray-600 text-sm">{t('logistics.stats_points')}</div>
          </div>
          <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 text-center hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
            <div class="text-4xl font-bold text-accent mb-2">5</div>
            <div class="text-gray-600 text-sm">{t('logistics.stats_routes')}</div>
          </div>
        </div>

        <!-- Right: Introduction -->
        <div class="space-y-6">
          <h2 class="text-3xl md:text-4xl font-bold font-serif text-primary">
            {t('logistics.network_title')}
          </h2>
          <p class="text-lg text-gray-600 leading-relaxed">
            {t('logistics.intro')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section with Images -->
  <section class="section-padding bg-white">
    <div class="container">
      <h2 class="text-3xl md:text-4xl font-bold font-serif text-primary text-center mb-4">
        物流服务分类
      </h2>
      <p class="text-lg text-gray-600 text-center mb-12 max-w-2xl mx-auto">
        我们提供全方位的国际物流解决方案，满足您不同的运输需求
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {logisticsServices.map((service) => (
          <a href={service.link} class="group block">
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-xl transition-all duration-300 hover:border-accent/30">
              <div class="relative h-48 overflow-hidden">
                <img
                  src={service.image}
                  alt={service.alt}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>

              <div class="p-6 relative">
                <h3 class="text-xl font-bold text-primary mb-3 group-hover:text-accent transition-colors">
                  {service.title}
                </h3>
                <p class="text-gray-600 text-sm mb-3 line-clamp-2">{service.description}</p>
                <div class="flex items-center justify-between">
                  <p class="text-accent font-semibold text-sm">{service.shortDesc}</p>
                  <span class="text-accent font-medium text-sm flex items-center gap-2 group-hover:gap-3 transition-all">
                    了解详情
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                  </span>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Compact Routes Section -->
  <section class="section-padding bg-slate-50">
    <div class="container">
      <div class="max-w-5xl mx-auto">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-bold font-serif text-primary">
            {t('logistics.routes_title')}
          </h2>
          <p class="text-sm text-gray-500">{t('logistics.routes_desc')}</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
          {routes.map((route, index) => (
            <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-100 hover:shadow-md hover:border-accent/30 transition-all cursor-pointer group">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-accent/10 rounded-lg flex items-center justify-center shrink-0">
                  <span class="text-accent font-bold text-sm">{index + 1}</span>
                </div>
                <p class="text-gray-700 text-sm font-medium truncate">{route}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="mt-6 bg-white p-4 rounded-xl border border-gray-100 shadow-sm">
          <p class="text-gray-600 text-sm flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {t('logistics.feeder_title')}: {t('logistics.feeder_desc')}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Modern CTA Section -->
  <section class="py-20 relative overflow-hidden bg-gradient-to-b from-slate-50 to-white">
    <!-- Subtle decorative background -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-1/4 left-1/5 w-96 h-96 bg-primary/5 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 right-1/5 w-80 h-80 bg-accent/5 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>
    
    <!-- Subtle pattern overlay -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,.1) 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>
    
    <div class="container relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Icon decoration -->
        <div class="flex justify-center mb-8">
          <div class="w-20 h-20 bg-gradient-to-br from-primary to-accent rounded-2xl flex items-center justify-center shadow-lg shadow-primary/20 animate-bounce" style="animation-duration: 3s;">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
        </div>
        
        <h2 class="text-3xl md:text-4xl font-bold font-serif mb-6 text-primary">
          {t('cta.title')}
        </h2>
        <p class="text-lg text-gray-600 mb-10 max-w-2xl mx-auto leading-relaxed">
          {t('cta.subtitle')}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="bg-gradient-to-r from-primary to-accent hover:from-primary-dark hover:to-accent-dark text-white text-base px-10 py-4 rounded-full inline-flex items-center justify-center gap-2 group transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1 font-semibold">
            {t('cta.button')}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="/logistics" class="bg-white hover:bg-gray-50 text-primary border-2 border-primary/20 hover:border-primary/40 text-base px-10 py-4 rounded-full inline-flex items-center justify-center gap-2 transition-all duration-300 font-medium">
            浏览服务
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
            </svg>
          </a>
        </div>
        
        <!-- Trust indicators with icons -->
        <div class="mt-12 flex items-center justify-center gap-10">
          <div class="flex items-center gap-2 text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="text-sm font-medium">专业团队</span>
          </div>
          <div class="flex items-center gap-2 text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
            <span class="text-sm font-medium">高效服务</span>
          </div>
          <div class="flex items-center gap-2 text-gray-500">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064" />
            </svg>
            <span class="text-sm font-medium">全球网络</span>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
