---
import Layout from '../layouts/Layout.astro';
import { useTranslations } from '../i18n/utils';
import PageHeader from '../components/PageHeader.astro';

// Use zh as default language for root path
const lang = 'zh';
const t = useTranslations(lang);
---

<Layout title={`${t('nav.contact')} - Guangyuan Shengyuan International Trade`}>
  <PageHeader 
    title={t('nav.contact')} 
    subtitle={t('cta.subtitle')} 
    bgImage="https://images.unsplash.com/photo-1516387938699-a93567ec168e?auto=format&fit=crop&q=80&w=2070"
    textColor="white"
  />

  <section class="section-padding">
    <div class="container grid grid-cols-1 md:grid-cols-2 gap-12">
      <!-- Contact Info -->
      <div class="space-y-8">
        <div>
          <h3 class="text-2xl font-bold font-serif text-primary mb-4">{t('nav.contact')}</h3>
          <p class="text-gray-600 mb-6">
            Reach out to us directly or fill out the form, and our team will get back to you promptly.
          </p>
        </div>

        <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
            </div>
            <div>
                <h4 class="font-bold text-lg mb-1">Address</h4>
                <p class="text-gray-600">
                   {t('about.address')}
                </p>
            </div>
        </div>

        <div class="flex items-start gap-4">
            <div class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
            </div>
            <div class="space-y-2">
                <h4 class="font-bold text-lg">{t('contact.phone')} / {t('contact.mobile')}</h4>
                <p class="text-gray-600 font-mono text-lg font-bold text-primary tracking-wide">+86 0839-6019988</p>
                <p class="text-gray-600 font-mono tracking-wide">+86 188 8667 8144</p>
                <p class="text-gray-600 font-mono tracking-wide">+86 188 8667 8244</p>
            </div>
        </div>

        <div class="flex items-start gap-4">
             <div class="w-12 h-12 bg-accent/10 rounded-full flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
            </div>
            <div>
                <h4 class="font-bold text-lg mb-1">{t('contact.email')}</h4>
                <p class="text-gray-600 font-mono">shengyuan@gysytrade.cn</p>
            </div>
        </div>
        
        <!-- Large Map -->
        <div 
          id="contact-map-container" 
          class="block mt-8 rounded-xl overflow-hidden shadow-lg border border-gray-100 h-96 relative z-10"
        ></div>
      </div>

      <!-- Company Introduction -->
      <div class="bg-white p-8 rounded-2xl shadow-lg border border-gray-100 h-fit">
        <h3 class="text-2xl font-bold font-serif text-primary mb-6">Company Profile</h3>
        
        <!-- Company Logo -->
        <div class="flex justify-center mb-6">
          <img src="/logo.png" alt="Guangyuan Shengyuan Logo" class="h-32 w-auto object-contain" />
        </div>
        
        <!-- Company Information -->
        <div class="space-y-4 text-sm">
          <div class="bg-slate-50 rounded-lg p-4">
            <h4 class="font-bold text-primary flex items-center gap-2 mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              Company Credentials
            </h4>
            <ul class="space-y-1 text-gray-700">
              <li><strong>Unified Social Credit Code:</strong> 91510802MAK30JGA1A</li>
              <li><strong>Establishment Date:</strong> 2025-12-02</li>
              <li><strong>Legal Representative:</strong> Xie Jinfu</li>
            </ul>
          </div>
          
          <div class="bg-accent/10 rounded-lg p-4">
            <h4 class="font-bold text-accent flex items-center gap-2 mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A6.947 6.947 0 0117 15a6.947 6.947 0 01-4-1.745M21 13.255A6.947 6.947 0 0017 11.5a6.947 6.947 0 00-4 1.745m0 0A6.947 6.947 0 0113.5 15.5a6.947 6.947 0 001.745-4m-1.745 4A6.947 6.947 0 017.5 15.5a6.947 6.947 0 004-1.745M10.5 8.255A6.947 6.947 0 0113.5 7a6.947 6.947 0 011.745 4m-1.745-4A6.947 6.947 0 0113.5 12a6.947 6.947 0 01-1.745-4" />
              </svg>
              International Trade Services
            </h4>
            <p class="text-gray-700">
              Specializing in international trade across textiles, building materials, appliances, and agricultural products. We provide quality import/export services connecting global markets.
            </p>
          </div>
          
          <div class="bg-primary/5 rounded-lg p-4">
            <h4 class="font-bold text-primary flex items-center gap-2 mb-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              Office Location
            </h4>
            <p class="text-gray-700">
              {t('about.address')}
            </p>
            <a href="https://map.baidu.com/search/广元万达广场/@12945823,3492962,13z" target="_blank" rel="noopener noreferrer" class="text-accent text-sm font-medium flex items-center gap-1 mt-2 group">
                Get Directions
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
        </div>
      </div>
    </div>
  </section>
</Layout>